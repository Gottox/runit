#!/bin/sh

LAST=0
test -r /etc/runit/reboot && LAST=6

echo 'Stopping services...'
/command/svc -d /service/*
/command/svwaitdown /service/* || ( echo 'Killing services...' ; \
				    /command/svc -k /service/* )
echo 'Stopping log services...'
/command/svc -d /service/*/log
/bin/sleep 5

/etc/init.d/rc $LAST

exit 0
